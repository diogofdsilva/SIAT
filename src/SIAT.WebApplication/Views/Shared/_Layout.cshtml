 @using SIAT.WebApplication.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="SIAT Website." />
    <title>@ViewBag.Title</title>
    @*<link rel="shortcut icon" href="../../Content/images/favicon.ico" />*@
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="wrapper">
        <header>
            
            <div id="logo">
			    <h2>Sistema de Informações e Alertas de Trânsito</h2>
			    <p> Convida os teus amigos e troca informações de trânsito em tempo real. Não fiques parado! </p>
                <p>@Html.Partial("_LogOnPartial")</p>
		    </div>

        </header>
        <section>
            <nav>
                <ul id="menu">
                    <li>@Html.MenuLink("SIAT", "Index", "Home")</li>
                    <li>@Html.MenuLink("Mapa", "Index", "Occurrence")</li>
                    <li>@Html.MenuLink("Pesquisar", "List", "Occurrence")</li>
                    <li>@Html.MenuLink("Meu Perfil", "Index", "User")</li>
                    <li>@Html.MenuLink("Acerca", "About", "Home")</li>
                </ul>
            </nav>
        </section>
        <section id="page">
